# ============================================
# InstaHelp Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_STORAGE_BUCKET=medical-files

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
RSA_PRIVATE_KEY_PATH=./keys/private_key.pem
RSA_PUBLIC_KEY_PATH=./keys/public_key.pem
AES_MASTER_KEY=your_32_byte_hex_master_key_here

# Email Configuration
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_username
EMAIL_PASS=your_mailtrap_password
EMAIL_FROM=noreply@instahelp.example.com

# OTP Configuration
OTP_EXPIRES_IN=600
OTP_LENGTH=6

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_WINDOW_MS=60000
OTP_RATE_LIMIT_MAX_REQUESTS=3
DEVICE_RATE_LIMIT_WINDOW_MS=60000
DEVICE_RATE_LIMIT_MAX_REQUESTS=1

# Device Configuration
DEVICE_HMAC_SECRET=your_device_hmac_secret_key_here

# Logging
LOG_LEVEL=info
